{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "types": [
            "node",
            "mocha"
        ],
        "baseUrl": ".",
        "paths": {
            "@database/*": [
                "src/database/*"
            ],
            "@interface/*": [
                "src/interface/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        },
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "test",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}